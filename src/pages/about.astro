---
import Layout from "@/layouts/Layout.astro";
import { getEntry, render } from "astro:content";

const about = await getEntry("about", "about");
const { Content } = await render(about!);
---

<Layout title={about?.data.title}>
  <section class="min-h-[calc(100dvh-2.5rem)] flex items-center">
    <div class="w-full max-w-2xl mx-auto px-6 md:px-10">
      <div class="editorial">
        <Content />
      </div>
    </div>
  </section>
</Layout>